<!DOCTYPE html>
<html>
<head>
  <title>Escalls</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= admin? ? (render 'layouts/admin_layout') : (render 'layouts/user_layout') %>

<% if flash[:message_alert] %>
    <div class="header__alert_message">
      <span class="scale_title_alert_message"><%= flash[:message_alert] %></span>
    </div>
<% end %>
<% if flash[:message_ok] %>
    <div class="header__ok_alert_message">
      <span class="scale_title_alert_message"><%= flash[:message_ok] %></span>
    </div>
<% end %>

<%= yield %>

</body>
</html>
