<h2>Регистрация</h2>
   <br/>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label 'Имя и фамилия' %><br />
    <%= f.text_field :full_name, autofocus: true, placeholder: 'Иван Иванов', class: 'form-control' %>
    <%= f.hidden_field :role, value: 'quest' %></div>
  <br/>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, class: 'form-control', placeholder: 'ivanov@mail.com' %></div>
  <br/>
  <div><%= f.label 'Пароль' %> <% if @validatable %><i>(<%= @minimum_password_length %> латинских символов минимум)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %></div>
  <br/>
  <div><%= f.label 'Подтверждение пароля' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %></div>
  <br/>
    <div style="width: 340px; height: 40px">
  <div><%= f.submit "Ок", class: 'btn btn-primary pull-right', style: 'width: 80px' %>
    <%= link_to 'Отмена', root_path, method: :get, class: 'btn btn-primary pull-right', style: 'margin-right: 15px; width: 80px' %>
    </div>
    </div>

<% end %>

